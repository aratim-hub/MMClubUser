<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginEnd="05dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvsponser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sponser Turnover"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/choclateColor"
                    android:textColorHint="@color/choclateColor"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginRight="05dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvspCompany2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="5dp"
                    android:text="Company 2"
                    android:textSize="16sp"
                    android:textColor="@color/choclateColor"
                    android:textColorHint="@color/choclateColor"/>

                <TextView
                    android:id="@+id/tvspCompany2RS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_marginTop="5dp"
                    android:text="INR: "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>

                <TextView
                    android:id="@+id/tvspCompany2BV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_marginTop="5dp"
                    android:text="BV: "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginRight="05dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvspCompany3R"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="5dp"
                    android:text="Company 3"
                    android:textSize="16sp"
                    android:textColor="@color/choclateColor"
                    android:textColorHint="@color/choclateColor"/>

                <TextView
                    android:id="@+id/tvspCompany3RRS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_marginTop="5dp"
                    android:text="INR: "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>

                <TextView
                    android:id="@+id/tvspCompany3RBV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_marginTop="5dp"
                    android:text="BV: "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginRight="05dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvspCompany3O"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="5dp"
                    android:text="Company 3"
                    android:textSize="16sp"
                    android:textColor="@color/choclateColor"
                    android:textColorHint="@color/choclateColor"/>

                <TextView
                    android:id="@+id/tvspCompany3ORS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_marginTop="5dp"
                    android:text="INR: "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>

                <TextView
                    android:id="@+id/tvspCompany3OBV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_marginTop="5dp"
                    android:text="BV: "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginRight="05dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvspCompany4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="5dp"
                    android:text="Company 4"
                    android:textSize="16sp"
                    android:textColor="@color/choclateColor"
                    android:textColorHint="@color/choclateColor"/>

                <TextView
                    android:id="@+id/tvspCompany4RS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_marginTop="5dp"
                    android:text="INR: "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>

                <TextView
                    android:id="@+id/tvspCompany4BV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_marginTop="5dp"
                    android:text="BV: "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginEnd="05dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvspCompany1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_marginTop="5dp"
                    android:text="Company 1"
                    android:textSize="16sp"
                    android:textColor="@color/choclateColor"
                    android:textColorHint="@color/choclateColor"/>

                <TextView
                    android:id="@+id/tvspCompany1RS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_marginTop="5dp"
                    android:text="INR: "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>

                <TextView
                    android:id="@+id/tvspCompany1BV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:layout_marginTop="5dp"
                    android:text="BV: "
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>
            </LinearLayout>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutApproveAndRejectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnApprove"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="35dp"
            android:layout_above="@+id/btnUploadPaymentReceipt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="05dp"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:shadowColor="@color/colorBlack"
            android:text="Approval"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:theme="@style/RippleEffect"
            android:translationZ="10dp" />

        <Button
            android:id="@+id/btnReject"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="35dp"
            android:layout_above="@+id/btnUploadPaymentReceipt"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="05dp"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:shadowColor="@color/colorBlack"
            android:text="Reject"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:theme="@style/RippleEffect"
            android:translationZ="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:visibility="gone"
            android:id="@+id/lblApprove"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="05dp"
            android:elevation="10dp"
            android:shadowColor="@color/colorBlack"
            android:text="Approved"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#7E2608"
            android:textSize="16sp"
            android:theme="@style/RippleEffect"
            android:translationZ="10dp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/lblReject"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="05dp"
            android:elevation="10dp"
            android:shadowColor="@color/colorBlack"
            android:text="Rejected"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#7E2608"
            android:textSize="16sp"
            android:theme="@style/RippleEffect"
            android:translationZ="10dp" />
    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>