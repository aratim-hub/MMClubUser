<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/layout_debtor_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_dayjoy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true" />

    <LinearLayout
        android:id="@+id/buttonDesignLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background"
            android:clickable="true"
            android:padding="05dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy GIG Bank AC"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgCopyBankDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_marginRight="20sp"
                android:src="@drawable/ic_content_copy_black_24dp" />

        </RelativeLayout>


        <Button
            android:id="@+id/btnJoinGIG"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_above="@+id/btnUploadPaymentReceipt"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="05dp"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:shadowColor="@color/colorBlack"
            android:text="Join GIG"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:padding="05dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:theme="@style/RippleEffect"
            android:translationZ="10dp" />

        <Button
            android:id="@+id/btnUploadPaymentReceipt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="05dp"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:shadowColor="@color/colorBlack"
            android:text="Upload GIG SELF Sponsor Id &amp; Payment Receipt"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:theme="@style/RippleEffect"
            android:translationZ="10dp" />
    </LinearLayout>


</RelativeLayout>