<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.UpdateReferenceLink">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/toolbar"
        android:padding="10dp">

        <EditText
            android:id="@+id/edtReferalLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter/Paste Your referel link or Sponsor Id" />

        <Button
            android:id="@+id/btnUploadPaymentReceipt"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="05dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/button_background"
            android:elevation="10dp"
            android:translationZ="10dp"
            android:text="Select Payment proof "
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:theme="@style/RippleEffect" />

        <ImageView
            android:id="@+id/imgPaymentReceipt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />


    </LinearLayout>

    <Button
        android:id="@+id/btnSubmitPaymentReceipt"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="05dp"
        android:background="@drawable/button_background"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:translationZ="10dp"
        android:text="Submit"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        android:theme="@style/RippleEffect" />


</RelativeLayout>